<resources>


    <style name="AppTheme" parent="@style/_AppTheme"/>

    <style name="_AppTheme" parent="android:Theme.Holo.NoActionBar">

        <item name="android:editTextStyle">@style/EditTextAppTheme</item>

        <item name="android:buttonStyle">@style/ButtonAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyleAppTheme</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="sdlDialogStyle">@style/DialogStyleLight.Custom</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>


    </style>

    <style name="TransparentActionBarTheme" parent="@android:Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtonTransparent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/s_item_list</item>

    </style>

    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/transp_white</item>
        <item name="android:titleTextStyle">@style/TransparentActionBar.ActionBar.TitleTextStyle</item>

    </style>
    <style name="TransparentActionBar.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>


    <style name="DialogStyleLight.Custom">
        <!-- anything can be left out: -->
        <item name="titleTextColor">@color/white</item>
        <item name="titleSeparatorColor">@color/white</item>
        <!--<item name="messageTextColor">@color/dialog_message_text</item>-->
        <item name="buttonTextColor">@color/white</item>
        <item name="buttonSeparatorColor">@color/white</item>
        <item name="buttonBackgroundColorNormal">@android:color/transparent</item>
        <!--<item name="android:textStyle">@style/Settings.Shadow</item>-->
        <item name="buttonBackgroundColorPressed">@color/transp_white</item>
        <item name="buttonBackgroundColorFocused">@color/transp_white</item>
        <item name="dialogBackground">@color/transp_white</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_dark</item>
    </style>


    <style name="myPopupMenuTextAppearanceSmall">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/transp_white</item>
    </style>

    <style name="SpinnerDropDownItemStyleAppTheme" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#fff</item>
        <item name="android:checkMark">@null</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ImageButtonAppTheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>
    <style name="ImageButtonTransparent" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_transp_holo_light</item>
    </style>

    <style name="Settings"></style>

    <style name="Settings.Shadow">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="MyCustomBetterPickerTheme">
        <item name="bpDialogBackground">@drawable/dialog_background</item>
        <item name="bpTextColor">@color/grey_33</item>
        <item name="bpKeyBackground">@drawable/s_dialog_button</item>
        <item name="bpButtonBackground">@drawable/s_dialog_button</item>
    </style>

</resources>
